extends ../layouts/default

block main
	.row
		.span6
			.pull-left
		.span6
block content
	.row
		.span10
			.cast-name=cast.name
			p.cast-description=cast.description
		.span2
			.pull-right
				=cast.createdAt.toDateString()
	.row
		.span12(style="background: #EEE; padding-top:30px; padding-bottom:30px; border-radius:10px;")
			div(style="margin:auto; width:848px;")
				video#video1.sublime(poster=cast.video.poster, width='848', height='477', data-autoresize='none', data-embed-size='940', data-uid='a55c1534', data-name='Midnight Sun', preload='none')
					each s in cast.video.source
						source(src=s.src, data-quality=s.quality)
	.row
		.span12
			!{test_skirt}
	.row
		.span12
			.tabbable(style='margin-bottom: 18px; margin-top:10px')
				ul.nav.nav-tabs
					li.active
						a(href='#tab1', data-toggle='tab') Summary
					li
						a(href='#tab2', data-toggle='tab') ASCII cast
					li
						a(href='#tab3', data-toggle='tab') Comments
				.tab-content(style='padding-bottom: 9px; border-bottom: 1px solid #ddd;')
					#tab1.tab-pane.active
						!{summary}
					#tab2.tab-pane
						!{ascii_cast}
					#tab3.tab-pane
